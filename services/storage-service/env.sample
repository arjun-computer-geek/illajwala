# Storage Service Environment Variables

NODE_ENV=development
PORT=4005

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/illajwala

# JWT Configuration
JWT_SECRET=dev-secret-change-me-please
JWT_EXPIRY=1d
REFRESH_JWT_SECRET=dev-refresh-secret-change-me
REFRESH_JWT_EXPIRY=7d

# CORS
CLIENT_URL=http://localhost:3000
CLIENT_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=illajwala-storage
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

